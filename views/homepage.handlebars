<div class="container">
  <h1 class="text-center">Our courses</h1>
  <div class="row">
    {{#each courses as |course|}}
      <div id={{course.id}}
        class="col-lg-4 col-md-3 col-sm-6 item d-flex justify-content-center"
      >
        <a href="/course/{{course.id}}" class='course-link'>
          <div class="card item-card card-block">
            <img
              src="https://static.pexels.com/photos/7357/startup-photos.jpg"
              alt="Photo of sunset"
            />
            <h4 class="card-title">{{course.title}}</h4>
            <p class="card-text">{{course.description}}</p>
            
            <div class = "row">
              <div class="col-5 text-center">
              <a href="#" class="btn btn-danger">Go somewhere</a>
              </div>
              <div class="col-5 text-center">
              <a href="#" class="btn btn-danger">Go somewhere</a>
                </div>
              </div>
            

          </div>
          </a>

      </div>
    {{/each}}
  </div>
</div>